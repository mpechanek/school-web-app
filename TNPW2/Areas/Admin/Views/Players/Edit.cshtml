@model DataAccess.Model.Hokejista
@{
    ViewBag.Title = "Edit";
}

<h2>Hráč @Model.Jmeno - Editace</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("Update", "Players", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.ImageName)

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Jméno hráče</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Jmeno, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Jmeno)
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Tým</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Tym, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Tym)


        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Počet bodů</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.PocetBodu, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PocetBodu)

        </div>

    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Rok narození hráče</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.DatumNarozeni, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.DatumNarozeni)

        </div>

    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Popis</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Popis, new { @class = "form-control formatedtext" })

        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Liga</label>
        <div class="col-sm-10">
            @Html.DropDownList("ligaId", new SelectList(ViewBag.Ligy, "Id", "Nazev", Model.Liga.Id), new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Post</label>
        <div class="col-sm-10">
            @Html.DropDownList("postId", new SelectList(ViewBag.Posty, "Id", "Nazev", Model.Post.Id), new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Obrázek</label>
        <div class="col-sm-10">
            <input type="file" name="picture" />
            @if(!string.IsNullOrEmpty(Model.ImageName))
            {
                <img src="@Url.Content("~/uploads/hokejista/" + Model.ImageName)"/>
            }
        </div>
    </div>



    <div class="form-group row">
        <div class="col-lg-10">
            <button type="submit" class="btn btn-primary">Upravit tohoto hráče</button>
        </div>
    </div>
}

<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
<script>tinymce.init({ selector:'.formatedtext' });</script>
