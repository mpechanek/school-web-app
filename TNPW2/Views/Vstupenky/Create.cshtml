@model DataAccess.Model.Vstupenka
@{

    ViewBag.Title = "Create";
}

<h2>Nová poptávka vstupenky</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("Add", "Vstupenky", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Jméno zákazníka</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Jmeno, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Jmeno)
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Adresa</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Adresa, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Adresa)


        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Počet vstupenek</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.PocetVstupenek, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PocetVstupenek)

        </div>

    </div>


    @*<div class="form-group row">
            <label class="col-sm-2 col-form-label">Liga</label>
            <div class="col-sm-10">
                @Html.DropDownList("ligaId", new SelectList(ViewBag.Ligy, "Id", "Nazev"), new { @class = "form-control" })

            </div>
        </div>*@



    <div class="form-group row">
        <div class="col-lg-10">
            <button type="submit" class="btn btn-primary">Vytvoření poptávky rezervace</button>
        </div>
    </div>
}

<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
<script>tinymce.init({ selector:'.formatedtext' });</script>
