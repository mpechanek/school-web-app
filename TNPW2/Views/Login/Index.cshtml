@using System.Linq.Expressions

@{
    ViewBag.Title = "Index";
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v3.8.5">
    <title>Hokejisti - Login</title>

    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">


    <style type="text/css">
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }

            .form-signin .checkbox {
                font-weight: 400;
            }

            .form-signin .form-control {
                position: relative;
                box-sizing: border-box;
                height: auto;
                padding: 10px;
                font-size: 16px;
            }

                .form-signin .form-control:focus {
                    z-index: 2;
                }

            .form-signin input[type="email"] {
                margin-bottom: -1px;
                border-bottom-right-radius: 0;
                border-bottom-left-radius: 0;
            }

            .form-signin input[type="password"] {
                margin-bottom: 10px;
                border-top-left-radius: 0;
                border-top-right-radius: 0;
            }
    </style>



    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
        }
    </style>

    <!--media (min-width: 768px) {
    .bd-placeholder-img-lg {
    font-size: 3.5rem;
    }
    }-->
</head>
<body class="text-center">



    @using (Html.BeginForm("SignIn", "Login", FormMethod.Post, new {@class = "form-signin"}))
    {


        <img class="mb-4" src="~/uploads/logo.jpg" alt="" width="300" height="200">
        <h1 class="h3 mb-3 font-weight-normal">Přihlášení uživatele</h1>
        <p><label for="inputEmail" class="sr-only">Login</label>
        <input type="text" id="inputEmail" class="form-control" placeholder="Uživatelské jméno" name="login" required>
        </p>
        <p>
            <label for="inputPassword" class="sr-only">Heslo</label>
            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Heslo" required>
        </p>

        if (TempData["error"] != null)
        {
            <p>@TempData["error"]</p>
        }
        <button class="btn btn-lg btn-primary btn-block" type="submit">Přihlásit</button>

      
      
  
             
     <a href="@Url.Action("Index", "Home", new
      {@area = ""})" class="btn btn-lg btn-outline-dark my-2 btn-block">Hlavní strana</a>
           
       
        <p class="mt-5 mb-3 text-muted">&copy; 2019 Milan Pechánek</p>

    }
</body>
</html>


